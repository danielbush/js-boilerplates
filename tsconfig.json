{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": true,
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./",
        "strict": true,
        "moduleResolution": "node",
        "outDir": "build",
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [
            "es6",
            "dom"
        ],
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
    ],
    "exclude": [
        "node_modules"
    ]
}