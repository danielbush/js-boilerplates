{
  "name": "babel-boilerplate",
  "version": "1.0.0",
  "description": "babel boilerplate",
  "main": "lib/index.js",
  "repository": "tbc",
  "author": "Daniel Bush",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "dotenv-safe": "^4.0.4",
    "eslint-plugin-flowtype": "^2.35.0"
  },
  "scripts": {
    "lint": "eslint src/ test/",
    "flow": "flow",
    "check": "yarn run flow && yarn run lint",
    "check:env": "node -e \"require('dotenv-safe').load()\"",
    "bundle": "rm build/*; webpack && uglifyjs -o build/dist.js build/main.js && cat build/dist.js | gzip - >build/dist.js.gz",
    "build": "rm -rf lib; babel -s --out-dir lib src",
    "docker:run": "export $(egrep -v '^#' .env) && docker run -it --rm $IMAGE_NAME",
    "docker:build": "eval $(egrep -v '^#' .env) npm run docker:build:image",
    "docker:build:image": "npm run build && docker build . -t $IMAGE_NAME",
    "start": "babel-node lib/index.js",
    "test": "npm run test:unit",
    "test:unit": "mocha -r babel-polyfill -r babel-register -r test/setup/unit src/*.spec.js src/**/*.spec.js test/unit",
    "test:watch": "npm run test:unit -- --watch",
    "flow:init": "flow init",
    "flow:start": "flow status",
    "flow:stop": "flow stop",
    "webpack": "webpack --config webpack.config.js",
    "prepublish": "in-publish && { echo 'Prepublish:' && yarn run build; } || not-in-publish",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "changelog-verify": "^1.0.4",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.3.0",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.52.0",
    "in-publish": "^2.0.0",
    "mocha": "^3.5.0",
    "sinon": "^3.0.0",
    "sinon-chai": "^2.12.0",
    "version-changelog": "^2.1.0"
  },
  "peerDependencies": {}
}
