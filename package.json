{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "node boilerplate",
  "main": "src/index.js",
  "repository": "tbc",
  "author": "Daniel Bush",
  "license": "MIT",
  "dependencies": {
    "dotenv-safe": "^4.0.4",
    "eslint-plugin-flowtype": "^2.35.0"
  },
  "scripts": {
    "lint": "eslint src/ test/",
    "start": "babel-node src/index.js",
    "check:env": "node -e \"require('dotenv-safe').load()\"",
    "test": "npm run test:unit",
    "test:unit": "mocha -r babel-register -r test/setup/unit src/*.spec.js src/**/*.spec.js test/unit",
    "test:watch": "npm run test:unit -- --watch",
    "build": "rm -rf lib; babel -s --out-dir lib src",
    "deploy": "npm run lint && npm run build && node -r dotenv/config node_modules/.bin/serverless deploy",
    "remove": "serverless remove",
    "docker:run": "export $(egrep -v '^#' .env) && docker run -it --rm $IMAGE_NAME",
    "docker:build": "eval $(egrep -v '^#' .env) npm run docker:build:image",
    "docker:build:image": "npm run build && docker build . -t $IMAGE_NAME",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "changelog-verify": "^1.0.4",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.3.0",
    "mocha": "^3.5.0",
    "serverless": "^1.13.1",
    "sinon": "^3.0.0",
    "sinon-chai": "^2.12.0",
    "version-changelog": "^2.1.0"
  }
}
