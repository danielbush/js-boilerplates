{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "node boilerplate",
  "main": "src/index.js",
  "repository": "tbc",
  "author": "Daniel Bush",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/ test/",
    "start": "node src/index.js",
    "check:env": "node -e \"require('dotenv-safe').load()\"",
    "test": "npm run test:unit",
    "test:unit": "mocha src test/unit",
    "test:watch": "npm run test:unit -- --watch",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "dotenv-safe": "^6.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "changelog-verify": "^1.0.4",
    "dirty-chai": "^2.0.1",
    "eslint": "^4.3.0",
    "eslint-plugin-import": "^2.12.0",
    "mocha": "^5.0.0",
    "sinon": "^7.0.0",
    "sinon-chai": "^3.0.0",
    "version-changelog": "^3.0.0"
  }
}
