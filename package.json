{
  "name": "node-boilerplate",
  "version": "1.0.0",
  "description": "node boilerplate",
  "main": "src/index.js",
  "repository": "tbc",
  "author": "Daniel Bush",
  "license": "MIT",
  "scripts": {
    "lint": "eslint src/ test/",
    "start": "node src/index.js",
    "test": "npm run test:unit",
    "test:unit:cmd": "NODE_ENV=test mocha --opts mocha.opts -r test/setup/unit src/**/*.spec.js test/unit",
    "test:unit": "nyc --all -- npm run test:unit:cmd",
    "test:watch": "npm run test:unit:cmd -- --watch",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "config": "^3.3.1"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "changelog-verify": "^1.0.4",
    "dirty-chai": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.0.0",
    "nyc": "^15.0.1",
    "prettier": "^2.0.0",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.5.0",
    "version-changelog": "^3.0.0"
  }
}
