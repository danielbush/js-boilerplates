{
  "name": "node-typescript-boilerplate",
  "version": "1.0.0",
  "description": "node typescript boilerplate",
  "main": "src/index.js",
  "repository": "tbc",
  "author": "Daniel Bush",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --no-error-on-unmatched-pattern src/ test/",
    "check:types": "tsc --noEmit",
    "check:types:watch": "npm run check:types -- --watch",
    "check": "npm run lint && npm run check:types",
    "start": "tsc && node build/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "test": "npm run test:unit",
    "test:unit:cmd": "NODE_ENV=test mocha --opts mocha.opts -r ts-node/register -r test/setup/unit.ts src/*.spec.[jt]s src/**/*.spec.[jt]s test/unit",
    "test:unit": "nyc --all -- npm run test:unit:cmd",
    "test:watch": "npm run test:unit:cmd -- --watch",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "config": "^3.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/config": "0.0.36",
    "@types/dirty-chai": "^2.0.2",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.1",
    "@types/sinon-chai": "^3.2.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "changelog-verify": "^1.0.4",
    "dirty-chai": "^2.0.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.0",
    "sinon": "^9.0.0",
    "sinon-chai": "^3.5.0",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.4",
    "version-changelog": "^3.0.0"
  }
}
