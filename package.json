{
  "name": "express-boilerplate",
  "version": "1.0.0",
  "main": "build/src/index.js",
  "repository": "tbc",
  "author": "Daniel Bush",
  "license": "MIT",
  "description": "Express boilerplate using typescript",
  "scripts": {
    "boilerplate": "npm run build && node build/src/boilerplate/node-ts-master/index.js",
    "boilerplate:dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/boilerplate/node-ts-master/index.ts",
    "lint": "eslint --no-error-on-unmatched-pattern src/ test/",
    "check": "npm run lint && npm run check:types",
    "check:types": "tsc --noEmit",
    "check:types:watch": "npm run check:types -- --watch",
    "build": "rm -rf build && tsc",
    "start": "node build/src/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node src/index.ts",
    "jest:help": "jest --help",
    "test": "npm run test:unit",
    "test:unit": "npm run test:unit:cmd -- --coverage",
    "test:watch": "npm run test:unit:cmd -- --watch",
    "test:unit:cmd": "NODE_ENV=test jest",
    "test:integration": "NODE_ENV=test jest test/integration",
    "version": "version-changelog CHANGELOG.md && changelog-verify CHANGELOG.md && git add CHANGELOG.md"
  },
  "dependencies": {
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "debug": "^4.3.1",
    "eslint-plugin-flowtype": "^5.4.0",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "morgan": "^1.10.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/cors": "^2.8.10",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/morgan": "^1.9.2",
    "@types/supertest": "^2.0.11",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "changelog-verify": "^1.1.2",
    "errorhandler": "^1.5.1",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "version-changelog": "^3.1.1"
  }
}
